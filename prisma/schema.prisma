datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOWDB")
}

generator client {
  provider = "prisma-client-js"
}

model Designer {
  id        Int      @default(autoincrement()) @id
  firstName String
  lastName  String
  outfits   Outfit[]
  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id])
}

model Event {
  id        Int        @default(autoincrement()) @id
  name      String
  guests    Guest[]    @relation(references: [id])
  designers Designer[]
  modelId   Int?
}

model Guest {
  id        Int      @default(autoincrement()) @id
  firstName String
  lastName  String
  events    Event[]  @relation(references: [id])
  outfits   Outfit[]
}

model Model {
  id        Int     @default(autoincrement()) @id
  firstName String
  lastName  String
  events    Event[]
}

enum Season {
  AW
  SS
}

model Outfit {
  id          Int    @default(autoincrement()) @id
  season      Season
  description String
  guestId     Int?
  designerId  Int
}